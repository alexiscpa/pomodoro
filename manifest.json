{
  "manifest_version": 3,
  "name": "FocusFlow Pomodoro",
  "version": "1.0.0",
  "description": "A powerful Pomodoro timer with task management, statistics, and forest rewards",
  "permissions": [
    "storage",
    "notifications",
    "alarms",
    "offscreen"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "options_page": "options.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
